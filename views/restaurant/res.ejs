<%- include('../inc/header-admin.ejs') %>
<!-- Viết code màn hình tại đây -->
<main id="main" class="main">
  <div class="pagetitle">
    <h1>Danh sách nhà hàng</h1>
    <nav>
      <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="index.html">Trang chủ</a></li>
        <li class="breadcrumb-item active">Danh sách nhà hàng</li>  
      </ol>

      <form class="d-flex ms-auto col-4 mb-2" action="/res/listrestaurant/search" method="get">
        <input class="form-control me-2" type="text" placeholder="Search" aria-label="Search" name="name">
        <button class="btn btn-primary text-white" type="submit">Search</button>
      </form>
      <table class="table">
        <thead>
          <tr>
            <th scope="col">#</th>
            <th scope="col">Nhà hàng</th>
            <th scope="col">Email</th>
            <th scope="col">Liên hệ</th>
            <th scope="col">Mở cửa</th>
            <th scope="col">Đóng cửa</th>
            <th scope="col">Ảnh</th>
            <th scope="col">Địa chỉ</th>
          </tr>
        </thead>
        <tbody>
          <% for (let i = 0; i < list.length; i++) { %>
            <tr>
              <th scope="row"><%= i + 1 %></th>
              <td><%= list[i].name %></td>
              <td><%= list[i].email %></td>
              <td><%= list[i].phone %></td>
              <td><%= list[i].timeon %></td>
              <td><%= list[i].timeoff %></td>
              <td><img src="<%= list[i].image %>" alt="<%= list[i].name %>" style="max-width: 100px;"></td>
              <td><%= list[i].address %></td>
            </tr>
          <% } %>
        </tbody>
      </table>
    </nav>
  </div>
  <!-- End Page Title -->
</main>
<%- include('../inc/footer.ejs') %>
