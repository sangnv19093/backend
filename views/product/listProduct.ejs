<%- include('../inc/header-admin.ejs') %>
<!-- Viết code màn hình tại đây -->
<main id="main" class="main">
  <div class="pagetitle">
    <h1>Danh sách sản phẩm</h1>
    <nav>
      <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="index.html">Trang chủ</a></li>
        <li class="breadcrumb-item active">Danh sách sản phẩm</li>
      </ol>
      <table class="table">
        <thead>
          <tr>
            <th scope="col">#</th>
            <th scope="col">Name</th>
            <th scope="col">Image</th>
            <th scope="col">Description</th>
            <th scope="col">Quantity In Stock</th>
            <th scope="col">Real Price</th>
            <th scope="col">Discount Price</th>
            <th scope="col">Category</th>
          </tr>
        </thead>
        <tbody>
          <% for (let i = 0; i < list.length; i++) { %>
            <tr>
              <th scope="row"><%= i + 1 %></th>
              <td><%= list[i].name %></td>
              <td><img src="<%= list[i].image %>" alt="<%= list[i].name %>" style="max-width: 100px;"></td>
              <td><%= list[i].description %></td>
              <td><%= list[i].quantityInStock %></td>
              <td><%= list[i].realPrice %></td>
              <td><%= list[i].discountPrice %></td>
              <td><%= list[i].category %></td>
            </tr>
          <% } %>
        </tbody>
      </table>
    </nav>
  </div>
  <!-- End Page Title -->
</main>
<%- include('../inc/footer.ejs') %>
